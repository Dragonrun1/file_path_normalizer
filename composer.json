{
    "name": "dragonrun1/file_path_normalizer",
    "description": "File_path_normalizer is a class used to normalize PHP file paths without several of the shortcomings of the built-in functions.",
    "authors": [
        {
            "name": "Michael Cummings",
            "email": "mgcummings@yahoo.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "FilePathNormalizer\\": [
                "src/"
            ]
        }
    },
    "autoload-dev": {
        "psr-0": {
            "Spec\\": "specs/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.*-dev"
        }
    },
    "license": "GPL-2.0",
    "minimum-stability": "stable",
    "require": {
        "php": ">7.0,<7.2"
    },
    "require-dev": {
        "henrikbjorn/phpspec-code-coverage": "dev-master",
        "phpspec/nyan-formatters": "~1.0",
        "phpspec/phpspec": "~2.5",
        "phpunit/php-code-coverage": "~4.0",
        "satooshi/php-coveralls": "dev-master"
    },
    "replace": {
        "dragonrun1/file_path_normalizer": "2.0.*"
    }
}
