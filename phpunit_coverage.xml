<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php"
         colors="true"
         processIsolation="false"
         stopOnError="false"
         stopOnFailure="false">
    <filter>
        <whitelist suffix=".php">
            <directory>./src/</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-clover" target="build/clover-phpunit.xml"/>
    </logging>
    <testsuites>
        <testsuite name="All">
            <directory>tests/Test</directory>
        </testsuite>
    </testsuites>
</phpunit>
