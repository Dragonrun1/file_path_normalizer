<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php"
         colors="true"
         processIsolation="false"
         stopOnError="false"
         stopOnFailure="false">
    <filter>
        <whitelist>
            <directory>./</directory>
        </whitelist>
        <blacklist>
            <directory>composer</directory>
            <directory>docs</directory>
            <directory>specs</directory>
            <directory>tests</directory>
            <directory>vendor</directory>
        </blacklist>
    </filter>
    <logging>
        <log type="coverage-clover" target="build/coverage-phpunit.xml"/>
    </logging>
    <testsuites>
        <testsuite name="All">
            <directory>tests/Test</directory>
        </testsuite>
    </testsuites>
</phpunit>
